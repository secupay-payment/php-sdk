{
    "name": "secupay/sdk",
    "version": "5.0.0",
    "description": "Secupay SDK for PHP",
    "keywords": [
        "secupay",
        "payment",
        "php",
        "sdk",
        "api"
    ],
    "homepage": "https://github.com/secupay-payment/php-sdk",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Secupay AG.",
            "email": "support@secupay.com",
            "homepage": "https://secupay.com/"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "firebase/php-jwt": "^6.8",
        "guzzlehttp/guzzle": "^7.7",
        "guzzlehttp/psr7": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.20"
    },
    "autoload": {
        "psr-4": { "Secupay\\Sdk\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Secupay\\Sdk\\Test\\" : "test/" }
    }
}
